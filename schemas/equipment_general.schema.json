{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SAGA Edition General Equipment",
  "description": "Schema for Star Wars SAGA Edition general equipment items.",
  "type": "object",
  "properties": {
    "general_equipment_data": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "general_equipment_list": {
          "type": "array",
          "items": { "$ref": "#/definitions/equipmentItem" }
        }
      },
      "required": ["description", "general_equipment_list"]
    }
  },
  "required": ["general_equipment_data"],
  "definitions": {
    "equipmentItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "full_text_description": { "type": ["string", "null"] },
        "equipment_category_code": { "type": "string", "description": "Raw code from 'TYPE' column." },
        "equipment_category_description": { "type": "string", "description": "Parsed description of the equipment type." },
        "cost_credits": { "type": ["integer", "string", "null"] },
        "weight_kg": { "type": ["number", "string", "null"] },
        "uses_text": { "type": ["string", "null"] },
        "use_cost_text": { "type": ["string", "null"] },
        "comments_and_effects_text": { "type": ["string", "null"] },
        "parsed_effects": { "type": "array", "items": { "$ref": "#/definitions/itemPropertyEffect" } },
        "source_book": { "type": "string" },
        "page": { "type": "string" }
      },
      "required": ["name", "equipment_category_description", "source_book", "page"]
    },
    "itemPropertyEffect": {
      "type": "object", "description": "A structured item property.",
      "properties": {
        "type": { "type": "string", "enum": ["narrative_property", "bonus", "other"] },
        "description": { "type": "string" },
        "value": { "type": ["integer", "null"] },
        "target": { "type": ["string", "null"] }
      }, "required": ["type", "description"]
    }
  }
}
